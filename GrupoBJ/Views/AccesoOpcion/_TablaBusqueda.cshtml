@model IEnumerable<GrupoBJ.Models.Acceso_Opcion>

@if (Model.Count() > 0)
{
    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped no-seleccionable" id="tablaBusqueda">
            <thead>
                <tr>
                    <th style="width:15%">Sistema</th>
                    <th style="width:25%">Opción</th>
                    <th style="width:25%">Opción padre</th>
                    <th style="width:25%">Tipo</th>
                    <th style="width:5%; text-align:center;">Sel.</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Where(m => m.Controlador == null))
                {

                    <tr>
                        <td>@Html.DisplayFor(m => item.Acceso_Sistema.Nombre)</td>
                        <td>@Html.DisplayFor(m => item.Nombre)</td>
                        <td>@Html.DisplayFor(m => item.nombrePadre)</td>
                        <td>@Html.DisplayFor(m => item.Acceso_Tipo_Archivo.Nombre)</td>
                        <td style="text-align:center">
                            <button type="button" onclick="Seleccionar(@item.idOpcion)" class="btn btn-primary">
                                <i class="fa fa-edit"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p>No hay registros</p>
}




