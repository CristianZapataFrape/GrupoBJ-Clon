                var arregloDatosBD = ["Empresa", "E.Nombre", "Departamento", "D.Nombre", "Puesto", "P.Nombre"];
                var arregloFiltro = [];

                for (var i = 1; i < colActuales.length; i++) { //Recorrer las th de la tabla HTML

                    var columnaAct = colActuales[i].innerHTML;
                    for (var j = 0; j < DatosTablaPuesto.length; j++) { //Recorrer las columnas configuradas como visibles
                        if (columnaAct == DatosTablaPuesto[j].columna) { //Aplicar la visibilidad y el ancho configurados
