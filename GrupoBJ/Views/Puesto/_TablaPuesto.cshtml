@model IEnumerable<GrupoBJ.Models.Puesto>
@if (Model.Count() > 0)
{
    @foreach (var item in Model)
    {
    <tr>
        <td hidden>@Html.DisplayFor(m => item.idPuesto)</td>
        <td hidden class="tPue-Empresa">@Html.DisplayFor(m => item.Departamento.Empresa.Nombre)</td>
        <td hidden class="tPue-Departamento">@Html.DisplayFor(m => item.Departamento.Nombre)</td>
        <td hidden class="tPue-Puesto">@Html.DisplayFor(m => item.Nombre)</td>
    </tr>
    }
}
else
{
    <br />
    <p>No hay registros</p>
}




