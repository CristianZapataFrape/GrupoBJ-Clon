@model IEnumerable<GrupoBJ.Models.Acceso_Perfil>

@if (Model.Count() > 0)
{
    @foreach (var item in Model)
    {
        <tr>
            <td hidden>@Html.DisplayFor(m => item.idPerfil)</td>
            <td hidden class="tPer-Empresa">@Html.DisplayFor(m => item.Acceso_Sistema.Empresa.Nombre)</td>
            <td hidden class="tPer-Sistema">@Html.DisplayFor(m => item.Acceso_Sistema.Nombre)</td>
            <td hidden class="tPer-Perfil">@Html.DisplayFor(m => item.Nombre)</td>
        </tr>
    }
}
else
{
    <br />
    <p>No hay registros</p>
}




