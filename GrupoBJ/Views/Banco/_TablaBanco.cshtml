@model IEnumerable<GrupoBJ.Models.Banco>
@if (Model.Count() > 0)
{
    @foreach (var item in Model)
    {
    <tr>
        <td hidden>@Html.DisplayFor(m => item.idBanco)</td>
        <td hidden class="tBan-Codigo">@Html.DisplayFor(m => item.Codigo)</td>
        <td hidden class="tBan-Banco">@Html.DisplayFor(m => item.Nombre)</td>
        <td hidden class="tBan-Clave">@Html.DisplayFor(m => item.Clave)</td>
        <td hidden class="tBan-RFC">@Html.DisplayFor(m => item.RFC)</td>
    </tr>
    }
}
else
{
    <br />
    <p>No hay registros</p>
}