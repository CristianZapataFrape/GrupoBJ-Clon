@model IEnumerable<GrupoBJ.Models.Departamento>

@if (Model.Count() > 0)
{
    @foreach (var item in Model)
    {
    <tr>
        <td hidden>@Html.DisplayFor(m => item.idDepartamento)</td>
        <td hidden class="tDep-Empresa">@Html.DisplayFor(m => item.Empresa.Nombre)</td>
        <td hidden class="tDep-Departamento">@Html.DisplayFor(m => item.Nombre)</td>
    </tr>
    }
}
else
{
    <br />
    <p>No hay registros</p>
}




