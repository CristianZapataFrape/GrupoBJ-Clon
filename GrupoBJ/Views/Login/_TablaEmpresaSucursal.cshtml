@model IEnumerable<GrupoBJ.Models.Usuario_Empresa_Sucursal_Sis_Per>

@if (Model.Count() > 0)
{
    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped no-seleccionable" id="tablaEmpresaSucursal">
            <thead>
                <tr>
                    <th style="width:45%">Empresa</th>
                    <th style="width:45%">Sucursal</th>
                    <th style="width:10%; text-align:center;">Sel.</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    <tr>
                        <td>@Html.DisplayFor(m => item.Empresa.Nombre)</td>
                        <td>@Html.DisplayFor(m => item.Sucursal.Nombre)</td>
                        <td style="text-align:center">
                            <button type="button" onclick="Seleccionar(@item.fkPerfil)" class="btn btn-primary">
                                <i class="fa fa-edit"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p>No hay registros</p>
}




