@model IEnumerable<GrupoBJ.Models.Moneda>
@{
    ViewData["Title"] = "Moneda";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<SelectListItem> listaMonedaSAT = (List<SelectListItem>)ViewBag.listaMonedaSAT;
    List<SelectListItem> listaSimbolo = (List<SelectListItem>)ViewBag.listaSimbolo;
    List<SelectListItem> listaDecimales = (List<SelectListItem>)ViewBag.listaDecimales;
    List<SelectListItem> listaPosicion = (List<SelectListItem>)ViewBag.listaPosicion;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link href="~/Script/css/vistas.css" rel="stylesheet">
</head>
<body>
    <section id="about">
        <div class="container">
            <form asp-action="Filtro" asp-controller="Moneda" id="frmMoneda"
                  data-ajax="true"
                  data-ajax-method="POST"
                  data-ajax-mode="replace"
                  data-ajax-update="#ajaxresult"
                  data-ajax-success="obtenerConfiguracionTabla('tablaMoneda')">
                <br>

                <h1 class="text-center">Monedas</h1>
                <hr />

                <div style="width:100%; height:80px;">
                    @Html.Hidden("datosFiltro")
                    @Html.Label("Buscador")
                    @Html.TextBox("Buscador", null, new { @class = "form-control", @onkeypress = "return check(event)" })
                </div>
                <div style="width:100%; height:25px; text-align:right;">
                    <button id="Mon-Act" hidden type="button" onclick="location.reload()" class="btn btn-info Permisos" style="margin-right:5px;">
                        <i class="fa fa-refresh"></i> Actualizar
                    </button>
                    <button id="Mon-Agr" hidden type="button" onclick="Agregar()" class="btn btn-success Permisos" data-toggle="modal" data-target="#exampleModal" style="margin-right:5px;">
                        <i class="fa fa-plus-circle"></i> Agregar
                    </button>
                    <button id="Mon-Mod" hidden type="button" onclick="ValidarSeleccion('Modificar')" class="btn black-background white Permisos" style="margin-right:5px;">
                        <i class="fa fa-edit"></i> Modificar
                    </button>
                    <button id="Mon-Eli" hidden type="button" onclick="ValidarSeleccion('Eliminar')" class="btn btn-danger Permisos" style="margin-right:5px;">
                        <i class="fa fa-trash"></i> Eliminar
                    </button>
                    <button id="Mon-Vta" hidden type="button" onclick="ValidarSeleccion('Vista')" class="btn btn-primary Permisos" style="margin-right:5px;">
                        <i class="fa fa-clipboard"></i> Vista
                    </button>
                    <button id="Mon-Tba" hidden type="button" onclick="ConfigurarTabla('tablaMoneda')" class="btn btn-secondary Permisos" style="margin-right:5px;" data-toggle="tooltip" data-placement="top" title="Configurar tabla">
                        <i class="fa fa-table"></i>
                    </button>

                </div>
                <br />

                <div class="table-responsive">
                    <table class="table table-bordered table-hover no-seleccionable" id="tablaMoneda">
                        <thead>
                            <tr>
                                <th hidden></th>
                                <th hidden id="idMon-Codigo" class="tMon-Codigo" style="width:10%">Código</th>
                                <th hidden id="idMon-Moneda" class="tMon-Moneda Obligatorio" style="width:50%">Moneda</th>
                                <th hidden id="idMon-Simbolo" class="tMon-Simbolo" style="width:10%">Símbolo</th>
                                <th hidden id="idMon-CodigoSAT" class="tMon-CodigoSAT" style="width:15%">Código SAT</th>
                                <th hidden id="idMon-Decimales" class="tMon-Decimales" style="width:15%">Decimales</th>
                            </tr>
                        </thead>
                        <tbody id="ajaxresult">
                            @await Html.PartialAsync("_TablaMoneda")
                        </tbody>
                    </table>
                </div>

            </form>

            <!---Modales-->
            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" style="overflow-y: scroll;" data-backdrop="static" data-keyboard="false">
                <div class="modal-dialog modal-xl" role="document">
                    <div class="modal-content">
                        <div class="modal-header" style="background-color: #ff5f40;">
                            <div style="width:4%; padding-top:8px;">
                                <img src="~/Script/img/icono_moneda.png" alt="" width="30" height="30">
                            </div>
                            <div style="width:80%">
                                <h5 class="modal-title" id="exampleModalLabel" style="color:#f6f4e6; font-weight:bold; padding-top:8px;">Datos de la moneda</h5>
                            </div>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <!--Crear-->
                        <form asp-action="Guardar" asp-controller="Moneda"
                              data-ajax="true" data-ajax-method="POST"
                              data-ajax-mode="replace" data-ajax-update="#divError"
                              data-ajax-success="Guardar">

                            @* Tabs--------------------------------------------------------- *@
                            <ul class="nav nav-tabs" id="myTab" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home"
                                       aria-selected="true">Información principal</a>
                                </li>
                            </ul>
                            @* --------------------------------------------------------------- *@
                            @* Contenido de los tabs ----------------------------------------- *@
                            @* Datos del puesto ------------------------ *@
                            <div class="tab-content" id="myTabContent">
                                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                                    <div class="modal-body row">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="col-sm-12" style="border-style:dotted; border-width:1px; padding-top:10px;">
                                            @Html.Hidden("id")
                                            <div class="form-group" style="width:30%">
                                                @Html.Label("Código*")
                                                @Html.TextBox("Codigo", null, new { @class = "form-control elementoModal input-number", @maxlength = "20" })
                                            </div>
                                            <div class="form-group">
                                                @Html.Label("Nombre*")
                                                @Html.TextBox("Nombre", null, new { @class = "form-control elementoModal", @maxlength = "50" })
                                            </div>
                                        </div>

                                        <div style="width:50%; height:35px; padding-bottom:10px; padding-top:10px; border-style:dotted; border-width:1px; padding-left:10px; background-color:#ffc75f; color:white; font-weight:bold;">
                                            <h6>Importe con número</h6>
                                        </div>
                                        <div style="width:50%; height:35px; padding-bottom:10px; padding-top:10px; border-style:dotted; border-width:1px; padding-left:10px; background-color:#ffc75f; color:white; font-weight:bold;">
                                            <h6>Importe con letra</h6>
                                        </div>

                                        <div class="col-sm-6" style="border-style:dotted; border-width:1px; padding-top:10px;">
                                            <div class="form-group">
                                                @Html.Label("Símbolo de la moneda*")
                                                @Html.DropDownList("Simbolo", listaSimbolo, new { @class = "form-control elementoModal" })
                                            </div>
                                            <div class="form-group">
                                                @Html.Label("Posición del símbolo*")
                                                @Html.DropDownList("Posicion", listaPosicion, new { @class = "form-control elementoModal" })
                                            </div>
                                            <div class="form-group">
                                                @Html.Label("Dígitos decimales*")
                                                @Html.DropDownList("Decimales", listaDecimales, new { @class = "form-control elementoModal" })
                                            </div>
                                        </div>
                                        <div class="col-sm-6" style="border-style:dotted; border-width:1px; padding-top:10px;">
                                            <div class="form-group">
                                                @Html.Label("Nombre en singular")
                                                @Html.TextBox("nombreSingular", null, new { @class = "form-control elementoModal", @maxlength = "30" })
                                            </div>
                                            <div class="form-group">
                                                @Html.Label("Nombre en plural")
                                                @Html.TextBox("nombrePlural", null, new { @class = "form-control elementoModal", @maxlength = "30" })
                                            </div>
                                            <div class="form-group">
                                                @Html.Label("Texto al final del importe")
                                                @Html.TextBox("textoFinal", null, new { @class = "form-control elementoModal", @maxlength = "30" })
                                            </div>
                                            <div class="form-group">
                                                @Html.Label("Código Moneda SAT*")
                                                @Html.DropDownList("fkMonedaSAT", listaMonedaSAT, new { @class = "form-control elementoModal" })
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="modal-footer">
                                <button id="btnGuardarCambios" type="submit" class="btn btn-primary">Guardar cambios</button>
                                <button type="button" id="btnClose" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                            </div>
                            <div id="divError" style="color:darkred; display:none;">

                            </div>
                        </form>

                    </div>
                </div>
            </div>

            @* Modal de configuración de tabla *@
            <div class="modal fade" id="tablaModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" style="overflow-y: scroll;" data-backdrop="static" data-keyboard="false">
                <div class="modal-dialog modal-xl" role="document">
                    <div class="modal-content">
                        <div class="modal-header" style="background-color: #ff5f40;">
                            <div style="width:4%">
                                <img src="~/Script/img/icono_tabla.png" alt="" width="30" height="30">
                            </div>
                            <div style="width:80%">
                                <h5 class="modal-title" id="exampleModalLabel" style="color:#f6f4e6; font-weight:bold; padding-top:8px;">Tabla moneda</h5>
                            </div>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <!--Crear-->
                        <form asp-action="configurarTabla" asp-controller="UsuarioTablaColumna"
                              data-ajax="true" data-ajax-method="POST"
                              data-ajax-mode="replace" data-ajax-update="#divErrorTabla"
                              data-ajax-success="Configurar">

                            @Html.Hidden("validacionColumnas")
                            @* Tabs--------------------------------------------------------- *@
                            <ul class="nav nav-tabs" id="myTab" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home"
                                       aria-selected="true">Configuración</a>
                                </li>
                            </ul>
                            @* --------------------------------------------------------------- *@
                            @* Contenido de los tabs ----------------------------------------- *@
                            @* Datos de la tabla ------------------------ *@
                            <div class="tab-content" id="myTabContent">
                                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                                    <div class="modal-body row">
                                        <div class="table-responsive" style="padding-left:50px; padding-right:50px;">
                                            <table class="table table-bordered table-hover" id="tablaMonedaColumnas">
                                                <thead>
                                                    <tr>
                                                        <th style="width:80%">Columna</th>
                                                        <th style="width:10%">Visibilidad</th>
                                                        <th style="width:10%">Ancho %</th>
                                                    </tr>
                                                </thead>
                                                <tbody id="tablaMonedaColumnasBody">
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            @* --------------------------------------------------------------------------------------------------------- *@

                            <div class="modal-footer">
                                <button id="btnGuardarCambiosTabla" type="submit" class="btn btn-primary" onclick="crearArrayTabla()">Guardar cambios</button>
                                <button type="button" id="btnCloseTabla" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                            </div>
                            <div id="divErrorTabla" style="color:darkred; display:none;">

                            </div>
                        </form>

                    </div>
                </div>
            </div>

            <!-- Modal de Informacion/Pregunta-->
            <div class="modal fade" id="exampleModalConfirmacion" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header" style="background-color: #318fb5;">
                            <div style="width:10%; padding-top:6px">
                                <img src="~/Script/img/icono_informacion.png" alt="" width="30" height="30">
                            </div>
                            <div style="width:90%; padding-top:8px" id="mensajeEliminacion">

                            </div>

                            <button type="button" class="close" data-dismiss="modal" aria-label="Close" id="btnCerrarIcono">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>

                        <div style="padding:1em">
                            <button type="submit" id="btnEliminarRegistroModal" onclick="EliminarRegistro()" class="btn btn-primary">Aceptar</button> <!---Boton para eliminar registro-->
                            <button type="button" id="btnCerrarConfirmacion" class="btn btn-secondary" data-dismiss="modal">Cancelar</button> <!---Cerrar popup -->
                        </div>
                    </div>
                </div>
            </div>


            <button id="btnErrores" type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalErrores" style="display:none;">
                Errores
            </button>
            <!-- Modal de validaciones -->
            <div class="modal fade" id="exampleModalErrores" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header" style="background-color:#ffd571;">
                            <div style="width:10%; padding-top:4px">
                                <img src="~/Script/img/icono_warning.png" alt="" width="30" height="30">
                            </div>
                            <div style="width:90%; padding-top:4px">
                                <h5 class="modal-title" id="exampleModalLabel" style="color:#f6f4e6; font-size:20px;"><b>Atención</b></h5>
                            </div>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body" id="divmodalErrores">

                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="Cerrar()">Cerrar</button>
                        </div>
                    </div>
                </div>
            </div>
            <!----->

        </div>
    </section>


    @section Scripts{

        <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.js"></script>
        <script src="~/Script/js/Permisos.js"></script>


        <script>
            var indiceInt;
            var campo;
            var idTablaMoneda = 0; //Variable para el id del puesto

            //Función que se ejecuta al iniciar la vista
            $(document).ready(function () {
                obtenerPermisosJS("Moneda");
                obtenerConfiguracionTabla("tablaMoneda");
            });

            //Función para actualizar el formualario cuando se escribe en el buscador
            var buscador = document.getElementById("Buscador");
            buscador.onkeyup = function () {
                idTablaMoneda = 0;
                $("#tablaMoneda tbody").siblings().removeClass("seleccionado");
                $("#frmMoneda").trigger("submit");
            }

            //Funcion para limpiar los datos
            function Limpiar() {
                $("#btnGuardarCambios").attr("disabled", false);
                document.getElementById("Codigo").value = "";
                document.getElementById("Nombre").value = "";
                document.getElementById("Simbolo").value = "";
                document.getElementById("Posicion").value = "";
                document.getElementById("Decimales").value = "";
                document.getElementById("nombreSingular").value = "";
                document.getElementById("nombrePlural").value = "";
                document.getElementById("textoFinal").value = "";
                document.getElementById("fkMonedaSAT").value = "";
                document.getElementById("divmodalErrores").innerHTML = "";
                document.getElementById("divError").innerHTML = "";
                $("#home-tab").trigger("click");
            }

            //Funcion cuando se presiona el boton agregar
            function Agregar() {
                habilitarElementos(false);
                Limpiar();
                $("#btnGuardarCambios").css("display", "inline");
                document.getElementById("divError").innerHTML = "";
                document.getElementById("id").value = -1;
            }

            //Función que se ejecuta despues de que se guardan los datos (Insersión o cambio)
            function Guardar(resultado) {
                if (resultado == "1" || resultado == "0") { //Si es 1 es porque inserto si es 0 es porque edito pero no se cambio ningun registro
                    $("#frmMoneda").trigger("submit");
                    document.getElementById("btnClose").click();
                    idTablaMoneda = 0;
                    $("#tablaMoneda tbody").siblings().removeClass("seleccionado");
                } else {
                    $("#btnGuardarCambios").attr("disabled", false);
                    if (resultado == "-1") { //Campo que ya esta repetido en BD
                        indiceInt = 1;
                        var moneda = $("#Nombre").val();
                        var repetido = "<ul class='list-group'><li class='list-group-item'>Registro duplicado. Los datos de la moneda <b>" + moneda + "</b> ya se encuentran registrado. Favor de verificar la información</li></ul>";
                        document.getElementById("divmodalErrores").innerHTML = repetido;
                        document.getElementById("btnErrores").click();
                    } else { //Sino es por un error
                        var errores = resultado;
                        let posicionInicial = errores.indexOf("(");
                        let posicionFinal = errores.indexOf(")");
                        var indice = errores.substring(posicionInicial + 1, posicionFinal);

                        let letras = [",", "A", "B", "C", "D", "E", "F","G","H","I"];
                        var posicion = letras.indexOf(indice); //posicion
                        indiceInt = parseInt(posicion); //Posicion entera para tabs
                        let campos = [",", "Codigo", "Nombre", "Simbolo", "Posicion", "Decimales", "nombreSingular", "nombrePlural", "textoFinal","fkMonedaSAT"];

                        campo = campos[posicion];//campo
                        var cadenaCortar = "(" + indice + ")";
                        var str = errores.replace(cadenaCortar, '');
                        document.getElementById("divmodalErrores").innerHTML = str;
                        document.getElementById("btnErrores").click();

                    }
                }
            }

            //Función que se ejecuta al cerrar el modal de error para abrir el tab
            function Cerrar() {
                document.getElementById("btnCerrarConfirmacion").click();
                $("#home-tab").trigger("click");
            }

            //Función para marcar el renglon seleccionado
            $('#tablaMoneda tbody').on("click", "tr", function () {
                if ($(this).hasClass("seleccionado")) {
                    $(this).removeClass("seleccionado");
                    idTablaMoneda = 0;
                    //console.log(idTablaPuesto);
                } else {
                    $(this).siblings().removeClass("seleccionado");
                    $(this).addClass("seleccionado");
                    idTablaMoneda = $(this).children("td:nth-child(1)").text();
                    //console.log(idTablaPuesto);
                }

            });

            //Función para validar que exista un registro seleccionado
            async function ValidarSeleccion(Accion) {
                if (idTablaMoneda == 0) {
                    document.getElementById("divmodalErrores").innerHTML = "Debes de seleccionar un registro";
                    document.getElementById("btnErrores").click();
                } else {
                    if (Accion == "Modificar") {
                        habilitarElementos(false);
                        Modificar(idTablaMoneda);
                        $('#exampleModal').modal('show');
                        $("#btnGuardarCambios").css("display", "inline");
                    } else if (Accion == "Eliminar") {
                        Eliminar(idTablaMoneda);
                        //Recuperar dato para eliminacion------------------------------------
                        NombreEliminacion = await recuperarNombreEliminacion(idTablaMoneda);
                        var mensaje = "<h5 class='modal-title' id='exampleModalLabel' style='color:#f6f4e6; font-size:14px;'><b>¿Seguro que desea eliminar la moneda <span style='color:#394867;'>" + NombreEliminacion.nombre + "</span>?</b></h5>";
                        document.getElementById("mensajeEliminacion").innerHTML = "";
                        document.getElementById("mensajeEliminacion").innerHTML = mensaje;
                        $("#btnEliminarRegistroModal").attr("disabled", false);
                        //--------------------------------------------------------------------
                        $('#exampleModalConfirmacion').modal('show');
                    } else if (Accion == "Vista") {
                        habilitarElementos(true);
                        Modificar(idTablaMoneda);
                        $('#exampleModal').modal('show');
                        $("#btnGuardarCambios").css("display", "none");
                    }

                }
            }

            //Función para recuperar el nombre del registro a elmininar
            function recuperarNombreEliminacion(id) {
                return $.ajax({
                    async: true,
                    type: "GET",
                    url: 'Moneda/recuperarDatos/?id=' + id,
                    dataType: "json"
                }).done(function (data) {

                })
            }

            //Funcion cuando se presiona el boton modificar pasando como parametro el id
            function Modificar(id) {
                Limpiar();
                document.getElementById("id").value = id;
                $.get("Moneda/recuperarDatos/?id=" + id, function (data) {
                    document.getElementById("Codigo").value = data.codigo;
                    document.getElementById("Nombre").value = data.nombre;
                    document.getElementById("Simbolo").value = data.simbolo;
                    document.getElementById("Posicion").value = data.posicion;
                    document.getElementById("Decimales").value = data.decimales;
                    document.getElementById("nombreSingular").value = data.nombreSingular;
                    document.getElementById("nombrePlural").value = data.nombrePlural;
                    document.getElementById("textoFinal").value = data.textoFinal;
                    document.getElementById("fkMonedaSAT").value = data.fkMonedaSAT;
                }).done(function () {

                });
            }

            //Funcion para asigar el id que se va a eliminar
            function Eliminar(idMoneda) {
                document.getElementById("id").value = idMoneda;
            }

            //Funcion para verificar relaciones
            async function EliminarRegistro() {
                var id = document.getElementById("id").value;
                //Validación de relación con empleado---------------------------------
                var RelacionesMoneda = await verificarRelacionesMoneda(id);
                if (RelacionesMoneda == 0) {
                    await verificarRegistroEliminar(id);
                    idTablaMoneda = 0;
                } else { 
                    Moneda = await obtenerNombreMoneda(id);
                    var nombreMoneda = Moneda.nombre;
                    document.getElementById("divmodalErrores").innerHTML = "<ul class='list-group'><li class='list-group-item'>No se puede eliminar la moneda <b>" + nombreMoneda + "</b> ya que se encuentra en uso.</li></ul>";
                    document.getElementById("btnErrores").click();
                    document.getElementById("btnCerrarIcono").click();
                }
            }

            //Ajax para obtener el nombre del puesto
            function obtenerNombreMoneda(id) {
                return $.ajax({
                    async: true,
                    type: "GET",
                    url: 'Moneda/recuperarDatos/?id=' + id,
                    dataType: "json"
                }).done(function (data) {

                })
            }

            //Ajax para verificar las relaciones
            function verificarRelacionesMoneda(id) {
                return $.ajax({
                    async: true,
                    type: "GET",
                    url: 'Moneda/verificarRelacionesMoneda/?id=' + id,
                    dataType: "json"
                }).done(function (data) {

                })
            }

            //Eliminación
            function verificarRegistroEliminar(id) {
                return $.ajax({
                    async: true,
                    type: "GET",
                    url: 'Moneda/eliminar/?id=' + id,
                    dataType: "json"
                }).done(function (data) {
                    if (data == "1") { //Si regresa 1 es porque se borro un registro
                        $("#frmMoneda").trigger("submit"); //Se refresca el formulario
                        document.getElementById("btnCerrarConfirmacion").click(); //Cierra el popup
                    }
                })
            }
        
            //Auto focus en modal
            $('#exampleModal').on('shown.bs.modal', function () {
                $('#Codigo').focus();
            })

            //Autofocus pestaña información
            $("#home-tab").click(function () {
                $('#' + campo).focus();
                $('#exampleModal').on('shown.bs.tab', function () {
                    $('#' + campo).focus();
                })
            });
            

            //Función para Des/habilitar los elementos del modal
            function habilitarElementos(estatus) {
                $(".elementoModal").prop("disabled", estatus);
            }

            //Detecta el error 403 por la caducidad de la sesión cuando se realiza una peticion ajax
            $(document).ajaxError(function (event, jqxhr) {
                if (jqxhr.status === 403)
                    window.location = 'Login';
            });

            //Función para detectar los submit para inhabilitar/habilitar el boton
            $("button[type='submit']").on("click", function (e) {
                $(this).attr("disabled", true);
