
@model IEnumerable<GrupoBJ.Models.Articulos_Campos>
@if (Model.Count() > 0)
{

    @foreach (var item in Model)
    {

        <div class="col-md-5 col-sm-5 col-xl-5">
            <label style="text-align-last:left;width:100%;" for="name">@Html.DisplayFor(m => item.Nombre_Articulo_Campos):</label>

            <input class="form-control" style="width:100%;" type="text" id=">@Html.DisplayFor(m => item.Nombre_Articulo_Campos)" />
        </div>
    }

}
else
{
    <br />
    <p>No hay registros</p>
 }
