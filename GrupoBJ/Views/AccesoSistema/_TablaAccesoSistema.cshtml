@model IEnumerable<GrupoBJ.Models.Acceso_Sistema>
@if (Model.Count() > 0)
{
    @foreach (var item in Model)
    {
        <tr>
            <td hidden>@Html.DisplayFor(m => item.idSistema)</td>
            <td hidden class="tSis-Empresa">@Html.DisplayFor(m => item.Empresa.Nombre)</td>
            <td hidden class="tSis-Sistema">@Html.DisplayFor(m => item.Nombre)</td>
        </tr>
    }
}
else
{
    <br/>
    <p>No hay registros</p>
}




